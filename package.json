{
  "name": "cameras",
  "version": "1.1.0",
  "description": "Cameras for 3D rendering.",
  "type": "module",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "prepare": "npx snowpack",
    "dev": "live-server & npm run build -- --watch --verbose --source-maps inline",
    "build": "babel src --out-dir lib --extensions .js,.ts",
    "clean": "rm -rf lib",
    "preversion": "npm run clean",
    "version": "npm run build && git add -A",
    "postversion": "git push origin master && git push --tags && npm publish"
  },
  "keywords": [
    "cameras",
    "perspective",
    "orthographic",
    "3d",
    "webgl"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/dmnsgn/cameras.git"
  },
  "homepage": "https://github.com/dmnsgn/cameras",
  "bugs": {
    "url": "https://github.com/dmnsgn/cameras/issues"
  },
  "author": "Damien Seguin (https://github.com/dmnsgn)",
  "license": "MIT",
  "dependencies": {
    "gl-matrix": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@types/gl-matrix": "^2.4.5",
    "dat.gui": "^0.7.6",
    "es-module-shims": "^0.4.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "primitive-geometry": "^1.1.0",
    "regl": "^1.3.13",
    "snowpack": "^1.5.2",
    "typescript": "^3.8.3"
  },
  "snowpack": {
    "webDependencies": [
      "es-module-shims",
      "regl",
      "gl-matrix",
      "dat.gui",
      "primitive-geometry"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    }
  },
  "eslintIgnore": [
    "node_modules",
    "sources"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "useBuiltIns": false,
          "targets": "last 1 Chrome version"
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  }
}
