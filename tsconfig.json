{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "sources"
  ],
  "include": [
    "src"
  ]
}
